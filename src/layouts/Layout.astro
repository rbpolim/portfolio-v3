---
import '@fontsource-variable/montserrat';

import Header from '../components/header.astro';
import GraynBg from '../components/grainy-bg.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-mono bg-slate-100">
		<GraynBg />
		<div class="h-full px-4 min-h-screen">
			<Header />
			<main class="max-w-2xl mx-auto pt-16 pb-24">
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
	:root,
	body,
	html {
		height: 100%;
	}
	.texture {
		position: fixed;
		inset: 0px;
		min-height: 100vh;
		width: 100vw;
		opacity: 0.3;
		transform: translateY(0px);
		z-index: -10;
  }
</style>
